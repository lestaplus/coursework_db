{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ES2022"],
    "noImplicitAny": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
